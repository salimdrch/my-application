<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond"
    android:orientation="vertical"
    tools:context=".AccueilActivity">

    <ImageButton
        android:id="@+id/img_bt"
        android:background="@color/fond"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/quizz" />

    <Button
        android:id="@+id/b_play"
        android:layout_gravity="center"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:background="@color/colorB"
        android:text="@string/bt_play" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/b_score"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:text="@string/bt_score"
        android:background="@color/colorB"
        tools:layout_edkground="tring/bt_score"/>
</LinearLayout>




